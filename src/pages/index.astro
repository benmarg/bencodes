---
import { getCollection } from "astro:content"
import Link from "../components/Link.vue"
import PostRow from "../components/PostRow.astro"
import Base from "../layouts/Base.astro"
import { sortPostsByDate } from "../lib/date"
import { getProjects } from "../lib/projects"

// const projects = await getProjects(6)
const projects = await getProjects()
const posts = sortPostsByDate(
  await getCollection("blog", ({ data }) => data.isDraft !== true),
).slice(0, 4)

const title = "Ben Margolius • Home";
const bannerText = encodeURIComponent("bencodes.dev")
---

<Base
  {title}
  description="Personal website and blog of Ben Margolius"
  image={`https://embed-image.vercel.app/api/blog/1?title=${title}&top=${bannerText}`}
>
  <h1 slot="header-content" class="text-neutral-500">
    Ben Margolius
  </h1>

  <main class="prose">
    <p>
      Hi! I'm Ben,  a Seattle-based Full Stack developer working day-to-day with  React, Next.js, Typescript, and more! 
      <br />
      <br />
      I'm passionate about creating beautiful solutions that solve real problems for users. 
      That means I don't just start and stop my day in VSCode. 
      I go out, talk to users, think outside-the-box, and come up with a game plan that solves the problem, with strong opinions loosely held, even if that doesn't involve a single line of code.
    </p>

    <div class="mt-12"></div>
    <!-- <h2>Projects</h2> -->
<!-- 
    <div class="grid grid-cols-2 gap-4 md:grid-cols-3">
      {projects.map(project => <Project {project} />)}
    </div> -->

    <div class="mt-12"></div>
    <h2 class="mb-6">Blog</h2>

    <div class="flex flex-col gap-4">
      {posts.map(post => <PostRow {post} />)}

      <span>
        <Link href="/blog">All posts →</Link>
      </span>
    </div>
  </main>
</Base>
